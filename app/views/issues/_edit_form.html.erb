
  <% StatusValue.new(0, 'whymustidothis') %>
  <div class="yui-b selection_div">
    <div class="yui-gf">
        <div class="yui-u first">Name</div>
    	<div class="yui-u form_element_div"><%= f.text_field :name %></div>
    </div>
  </div>
 
  <div class="yui-b selection_div">
    <div class="yui-gf">
        <div class="yui-u first">Owner</div>
    	<div class="yui-u form_element_div">
    		<%= collection_select(:issue, :owner_id, Developer.find(:all, :order => "first, last"), :id, :full_name) %>
    	</div>
    </div>
  </div>
  
  <div class="yui-b selection_div">
    <div class="yui-gf">
        <div class="yui-u first">Originator</div>
    	<div class="yui-u form_element_div">
    		<%= collection_select(:issue, :originator_id, Developer.find(:all, :order => "first, last"), :id, :full_name) %>
    	</div>
    </div>
  </div>
  
  <div class="yui-b selection_div">
    <div class="yui-gf">
        <div class="yui-u first">Status</div>
    	<div class="yui-u form_element_div">
    		<%= collection_select(:issue, :issue_status_id, IssueStatus.values, :id, :label) %> 
    	</div>
    </div>
  </div>
  
   <div class="yui-b selection_div">
    <div class="yui-gf">
        <div class="yui-u first">Description</div>
    	<div class="yui-u form_element_div">
    		<%= f.text_area :description, {:rows => '10', :cols => '80', :class => 'editor'} %> 
    	</div>
    </div>
  </div>
  
  <div class="yui-b selection_div advanced_edit">
    <div class="yui-gf">
        <div class="yui-u first">Notes</div>
    	<div class="yui-u form_element_div">
    		<%= f.text_area :notes, {:rows => '2', :cols => '80', :class => 'advanced_editor'} %> 
    	</div>
    </div>
  </div>
  
  
<script type="text/javascript">
  	$(document).ready(function() {
		$('form:not(.filter) :input:visible:first').focus();
		$(".form_element_div :first_child").clickOnEnter('#submit_button');
  	} );
</script>


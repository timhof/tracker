<%= link_to image_tag("/images/icons/magnifier.png"), task %>
<%= link_to image_tag("/images/icons/edit-signiture.png"), edit_task_path(task) %>
<%= link_to image_tag("/images/icons/cross-script.png"), task, :confirm => 'Are you sure?', :method => :delete %>

<% unless task.is_open %>
<%= link_to image_tag("/images/icons/bug--exclamation.png"), update_task_status_path(task.id, TaskStatus::PLANNING.id), :class => "get" %>
<% end %>
<% unless task.is_inprogress || true %>
<%= link_to 'P', update_task_status_path(task.id, TaskStatus::INPROGRESS.id), :class => "get" %>
<% end %>
<% unless task.is_complete %>
<%= link_to image_tag("/images/icons/tick.png"), update_task_status_path(task.id, TaskStatus::COMPLETE.id), :class => "get" %>
<% end %>



  <div class="yui-b selection_div">
    <div class="yui-gf">
        <div class="yui-u first">Name</div>
    	<div class="yui-u form_element_div">
    		<%= f.text_field :name%> 
    	</div>
    </div>
  </div>

  <div class="yui-b selection_div">
    <div class="yui-gf">
        <div class="yui-u first">Status</div>
    	<div class="yui-u form_element_div">
    		<% StatusValue.new(0, 'whymustidothis')) %>
    		<%= collection_select(:bug, :bug_status_id, BugStatus.values, :id, :label) %> 
    	</div>
    </div>
  </div>
  
  <div class="yui-b selection_div">
    <div class="yui-gf">
        <div class="yui-u first">Description</div>
    	<div class="yui-u form_element_div">
    		<%= f.text_area :description, {:rows => '10', :cols => '40', :class => 'editor'} %> 
    	</div>
    </div>
  </div>

  <div class="yui-b selection_div" style="display:none;">
    <div class="yui-gf">
        <div class="yui-u first">Notes</div>
    	<div class="yui-u form_element_div">
    		<%= f.text_area :notes, {:rows => '10', :cols => '40', :class => 'editor'} %> 
    	</div>
    </div>
  </div>
 
<script type="text/javascript">
  	$(document).ready(function() {
		$('form:not(.filter) :input:visible:first').focus();
		$(".form_element_div :first_child").clickOnEnter('#submit_button');
  	} );
</script>
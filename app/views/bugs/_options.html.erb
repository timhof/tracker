
<% StatusValue.new(0, 'whymustidothis') %>
<%= link_to image_tag("/images/icons/magnifier.png"), [report, bug], {:title => 'Show Bug Details'} %>
<%= link_to image_tag("/images/icons/edit-signiture.png"), edit_report_bug_path(report, bug), {:title => 'Edit Bug Details'} %>
<%= link_to image_tag("/images/icons/cross-script.png"), [report, bug], {:confirm => 'Are you sure?', :method => :delete, :title => 'Delete Bug'} %>
<%= link_to image_tag("/images/icons/mail-send.png"), email_bug_path(bug.id), {:title => 'Email Bug', :class => "get"} %>

<% unless bug.is_open %>
<%= link_to image_tag("/images/icons/bug--exclamation.png"), update_bug_status_path(bug.id, BugStatus::OPEN.id), {:title => 'Set to Open', :class => "get"} %>
<% end %>
<% unless bug.is_inprogress || true %>
<%= link_to 'P', update_bug_status_path(bug.id, BugStatus::INPROGRESS.id), {:title => 'Set to In-progress', :class => "get"} %>
<% end %>
<% unless bug.is_resolved %>
<%= link_to image_tag("/images/icons/tick.png"), update_bug_status_path(bug.id, BugStatus::RESOLVED.id), {:title => 'Set to Resolved', :class => "get"} %>
<% end %>


